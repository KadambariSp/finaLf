<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="20dp"
        tools:context=".liscurrify">

        <TextView
            android:id="@+id/tvasach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserratmedium"
            android:layout_centerHorizontal="true"
            android:text="List of all Uploaded PDF notices along with their name!! Download them by just tapping on any item from list that you want to download from list!!"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            />

        <ListView
            android:layout_centerHorizontal="true"
            android:id="@+id/myListView"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:elevation="10dp"
            android:layout_below="@id/tvasach"
            android:layout_marginTop="30dp"
            android:background="@drawable/hop"
            android:padding="10dp"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="true">

        </ListView>


    </RelativeLayout>
</ScrollView>