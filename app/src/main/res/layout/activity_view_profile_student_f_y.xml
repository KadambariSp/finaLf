<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ViewProfileStudentFY"
    android:background="#FFF"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/student_home_profile_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:fontFamily="@font/fredoka"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Dear Student , Please Submit Your Profile "
                android:textSize="24sp"/>


            <ImageView
                android:src="@drawable/studfinal"
                android:layout_width="140dp"

                android:layout_marginTop="0dp"
                android:layout_height="140dp"

                android:layout_gravity="center"
                android:id="@+id/student_home_profile_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONAL DETAILS"
                android:id="@+id/student_home_profile_personal"
                android:visibility="gone"
                android:textSize="25sp"
                android:fontFamily="@font/fredoka"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:editable="false"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="20dp"
                android:background="@drawable/etbg"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:id="@+id/student_home_info_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="EMAIL ID"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:background="@drawable/etbg"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:editable="false"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/student_home_info_email"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PHONE NO"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:background="@drawable/etbg"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:id="@+id/student_home_info_phoneno"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CITY"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/etbg"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:editable="false"
                android:id="@+id/student_home_info_city"/>
            <TextView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:hint="QUALIFICATION DETAILS"
                android:id="@+id/student_home_profile_qualification"
                android:textSize="25sp"

                android:layout_marginTop="40dp"
                android:editable="false"
                android:fontFamily="@font/fredoka"

                android:layout_marginLeft="15dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="QUALIFICATION"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/etbg"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:editable="false"
                android:id="@+id/student_home_info_qualification"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="COLLEGE NAME"
                android:background="@drawable/etbg"
                android:textSize="20dp"
                android:visibility="gone"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:id="@+id/student_home_info_clgname"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="PASSING YEAR"
                android:background="@drawable/etbg"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:editable="false"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:id="@+id/student_home_info_passingyear"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FIELD OF INTEREST"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="30dp"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:editable="false"
                android:layout_gravity="center_horizontal"

                android:layout_marginRight="20dp"
                android:background="@drawable/etbg"
                android:fontFamily="@font/montserratmedium"
                android:textColor="@color/colorPrimary"
                android:id="@+id/student_home_info_INTEREST"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>









