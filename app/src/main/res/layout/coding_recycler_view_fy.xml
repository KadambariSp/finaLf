<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="340dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/codingFyImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/code"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/codingFyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build your knowledge into Basic Coding!"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/fredoka"
            />
        <TextView
            android:id="@+id/codingFyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C,C++ and Many more are there !"
            android:fontFamily="@font/micross"
            android:textColor="@color/darkblue"/>



    </LinearLayout>


</androidx.cardview.widget.CardView>