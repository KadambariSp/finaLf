<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mImp_ImageSy"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/internshipfinal"
            />
        <TextView
            android:id="@+id/mImp_TitleSy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internships"
            android:layout_toRightOf="@id/mImp_ImageSy"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:fontFamily="@font/fredoka"/>
        <TextView
            android:id="@+id/mImp_DescSy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mImp_TitleSy"
            android:textColor="#fece2f"
            android:textStyle="bold"
            android:fontFamily="@font/montserratmedium"
            android:text="1 Month Internship for your experience"
            android:layout_toRightOf="@id/mImp_ImageSy"
            android:padding="10dp"
            android:textSize="9sp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>